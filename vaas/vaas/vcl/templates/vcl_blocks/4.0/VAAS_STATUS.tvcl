sub vcl_recv {
    if (req.url == "/vaas_status") {
        return (synth(999, ""));
    }

    if (req.url == "/vaas/" && req.http.{{ allow_metrics_header }}) {
        return (synth(989, ""));
    }
}

sub vcl_synth {
    if (resp.status == 999) {
        {% if server.status == 'active' %}
            set resp.status = 200;
        {% else %}
            set resp.status = 503;
        {% endif %}
        if (std.file_exists("/etc/return_503")) {
            set resp.status = 503;
        }
        synthetic("");
    }
    if (resp.status == 989) {
        set resp.status = 200;
        set resp.http.Content-Type = "application/json";
        synthetic ( {"{ "vcl_version" : "##VCL_VERSION##", "varnish_status": "{{server.status}}" }"} );
        return (deliver);
    }
}